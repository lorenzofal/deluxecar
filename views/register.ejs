<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<%- include('./partials/head') %>  
</head>

<body>
	<!-- Header -->
	<%- include('./partials/header')%> 

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->

				<form action="login.ejs" method="POST" class="formulario"> 
					<div class="NombreYApellido">
						<input type="text" class="form-control" placeholder="Nombre y Apellido" name="nombreapellido" id="Apellido">

					</div>
					<div>
						<input type="email" class="form-control" placeholder="Email" name="email" id="email">

